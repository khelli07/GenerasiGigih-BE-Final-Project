<div class="container" style="margin-top:13%; width:50%">
  <h2 class="mb-3">Buat Menu Baru</h2>
  <%= form_with(model: @food, url: food_index_path) do |form| %>
  <div class="form-row mb-3">
    
    <div class="col">
    <%= form.text_field :name, class: "form-control", placeholder: "Name" %>
    </div>
    
    <div class="col">
    <%= form.text_field :price, class: "form-control",  placeholder: "Price" %>
    </div>
    
    </div>
    
  <div class="form-row mb-3">
    <div class="col">
     <%= form.collection_select :category_ids, 
       Category.order(:name), :id, :name, {}, 
       { class:"form-control select2", multiple:true } %>
    </div>
  </div>
    
  <input class="btn btn-success" type="submit" value="Selesai">
  <% end %>
  
  <form class="mt-2" action="/food" method="get">
    <input class="btn btn-danger" type="submit" value="Back">
  </form>
</div>

<script>
  $(document).ready(function() { $(".select2").select2(); });
</script>
