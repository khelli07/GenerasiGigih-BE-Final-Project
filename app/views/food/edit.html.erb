<div class="container" style="margin-top:13%; width:50%">
  <h2 class="mb-3">Editing <%= @food.name %></h2>
  <%= form_with(model: @food, url: food_path(@food.id)) do |form| %>
  <div class="form-row mb-3">
    
    <div class="col">
    <%= form.text_field :name, class: "form-control", value: @food.name %>
    </div>
    
    <div class="col">
    <%= form.text_field :price, class: "form-control",  value: @food.price %>
    </div>
    
  <input class="btn btn-success" type="submit" value="Selesai">
  <% end %>
</div>